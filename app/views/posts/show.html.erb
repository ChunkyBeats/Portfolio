<% content_for(:title, "Post | Portfolio") %>

<div class="block">
  <h1><%= @post.title %></h1>
  <h5>Written by: <%= @post.user.username %></h5>
  <p><%= @post.body %></p><br>

  <i>Posted <%= @post.timePosted %> ago.</i>
</div>

<hr>
<% if current_user %>
  <%= link_to 'Add a Comment', new_post_comment_path(@post), id: 'new_post_comment_link', remote: true, class: 'btn btn-success' %>
<% end %>
<hr>

<div id="comments">
  <%= render @comments %>
</div>


<p><%= link_to "Return to Posts", posts_path %></p>
