<% if current_user.admin? %>
  <h1>New Post</h1>
  <%= form_for Post.new do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>
    <%= f.submit "Post", class: "btn btn-primary" %>
  <% end %>
<% else %>
  You must be an Admin to create a post.
<% end %>
